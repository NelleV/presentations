% Redefine title page
\setbeamertemplate{title page}{%
\begin{tikzpicture}[remember picture,overlay]
%\fill[Blue]
%  ([yshift=-20pt]current page.west) rectangle (current page.north east);

\node[anchor=south east]
  at ([yshift=-75pt,xshift=0pt]current page.east) (title)
  {\parbox[t]{\textwidth}{%
 \usebeamerfont{title}\textcolor{Blue}{%
    \textpdfrender{%
    FillColor=Black,
    LineWidth=.1ex,
    }{\inserttitle}}

 \vskip-1.5ex%
 \rule{\dimexpr\paperwidth-1.5cm\relax}{0.4pt}

 \usebeamerfont{subtitle}\textcolor{Gray}{%
    \textpdfrender{%
    FillColor=gray,
    LineWidth=.1ex,
    }{\em\raggedleft\footnotesize\insertsubtitle}}

 \vskip 1.5ex%

 \usebeamerfont{author}\textcolor{gray}{%
    \textpdfrender{%
    FillColor=gray,
    LineWidth=.1ex,
    }{\scriptsize\insertauthor}}

 \vskip-0.5ex%

 \usebeamerfont{date}\textcolor{gray}{%
    \textpdfrender{%
    FillColor=gray,
    LineWidth=.1ex,
    }{\scriptsize\insertdate}}

 \vskip1ex%

 \usebeamerfont{institute}\textcolor{gray}{%
    \textpdfrender{%
    FillColor=gray,
    LineWidth=.2ex,
    }{\tiny\insertinstitute}} 
}
};
\end{tikzpicture}
}

